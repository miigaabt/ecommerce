# Production Environment Variables
NEXT_PUBLIC_API_URL=https://your-api-domain.com
NEXT_PUBLIC_APP_URL=https://your-app-domain.com
NEXT_PUBLIC_APP_ENV=production

# Database
DATABASE_URL=postgresql://user:password@your-db-host:5432/ecommerce_prod

# JWT
JWT_SECRET=your-very-secure-jwt-secret-key-for-production
JWT_EXPIRES_IN=7d

# Email (production - Gmail, SendGrid гэх мэт)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment (live keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# File uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Security
NEXTAUTH_SECRET=your-nextauth-secret-for-production
NEXTAUTH_URL=https://your-app-domain.com
